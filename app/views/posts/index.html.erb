<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= post.title %></td>
    <td><%= post.message %></td>
    <td><%= link_to 'Show', [@user, post] %></td>
    <td><%= link_to 'Edit', edit_user_post_path(@user, post) %></td>
    <td><%= link_to 'Destroy', [@user, post], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


<p><%= link_to "Back to User", @user %></p>
